{
  "exclude": [
    "config.*.*.ts",
    "setup-npm-package.*",
    "dist/**/",
    "src/templates/**"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "allowJs": true,
    "declaration": true,
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}